<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView_qrcode"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"></ImageView>


        <EditText
            android:id="@+id/system_et_usernumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView_qrcode"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="输入用户身份ID"
            tools:layout_editor_absoluteX="106dp"></EditText>


        <EditText
            android:id="@+id/system_et_floor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/system_et_usernumber"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="输入楼层"
            tools:layout_editor_absoluteX="49dp"></EditText>

        <Button
            android:id="@+id/system_btn_getqrcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            app:layout_constraintTop_toBottomOf="@+id/system_et_floor"
            tools:ignore="MissingConstraints"
            android:text="点击获取门禁二维码"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            tools:layout_editor_absoluteX="0dp"></Button>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>